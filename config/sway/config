### Variables

set $mod Mod4
set $term footclient
set $browser brave
set $filemanager nemo
set $power nwg-bar


### Xwayland
xwayland enable


### Autostart
exec perf.sh -h
exec waybar
exec autotiling
exec foot -s
exec wl-paste --watch cliphist store
exec rm ~/.cache/cliphist/db
exec /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec /usr/lib/xdg-desktop-portal -r
exec /usr/lib/xdg-desktop-portal-wlr


### Output configuration

# Wallpaper
output * bg /home/felipe/Pictures/Wallpapers/sky.png fill

# Mouse cursor
seat seat0 xcursor_theme macOS 24

# Outputs
include ~/.config/sway/outputs

# You can get the names of your outputs by running: swaymsg -t get_outputs

### Idle configuration
exec swayidle -w \
    timeout 300 '~/.config/sway/lock.sh' \
    timeout 600 'swaymsg "output * power off"' resume 'swaymsg "output * power on"' \
    before-sleep '~/.config/sway/lock.sh'
# This will lock your screen after 300 seconds of inactivity, then turn off
# your displays after another 300 seconds, and turn your screens back on when
# resumed. It will also lock your screen before your computer goes to sleep.



### Input configuration

# Every keyboard uses BR layout
input "type:keyboard" {
    xkb_layout br
}

# My laptop uses the thinkpad variant
input "1:1:AT_Translated_Set_2_keyboard" {
    xkb_layout br
    xkb_variant thinkpad
}

# Turn off mouse accel
input "12625:16429:2.4G_Wireless_Mouse" {
    accel_profile "flat"
}

# Usual trackpad stuff
input "1739:0:Synaptics_TM3276-022" {
    natural_scroll enabled
    scroll_factor 0.5
    tap enabled
    dwt disabled
}

# Enable numlock by default
input type:keyboard xkb_numlock enabled


# You can get the names of your inputs by running: swaymsg -t get_inputs
# Read `man 5 sway-input` for more information about this section.



